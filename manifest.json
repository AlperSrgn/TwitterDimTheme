{
  "manifest_version": 3,
  "name": "Dim Theme",
  "version": "1.0",
  "description": "Dim theme for X (Twitter)",

  "permissions": ["activeTab", "scripting", "storage"],

  "host_permissions": ["*://*.twitter.com/*", "*://*.x.com/*"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "css": ["style.css"],
      "js": ["content.js"]
    }
  ]
}
