{
  "manifest_version": 3,
  "name": "Dim Theme for X",
  "version": "1.1",
  "description": "Advanced dim theme for X (Twitter)",

  "permissions": ["activeTab", "scripting", "storage", "tabs"],

  "host_permissions": ["*://*.twitter.com/*", "*://*.x.com/*"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "css": ["style.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
